common: &common_settings
  adapter: mysql2
  encoding: utf8

development:
  <<: *common_settings
  database: server_registry_dev
  host: localhost
  username: registryuser
  password: registrypassword

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  <<: *common_settings
  database: server_registry_test
  host: localhost
  username: registryuser
  password: registrypassword

# change this for production
production:
  <<: *common_settings
  database: server_registry_prod
  host: admindb.shindig.io
  username: serverreguser
  password: <%= Capistrano::CLI.password_prompt("Enter production MySQL database password: ") %>

