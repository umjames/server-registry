<h1>Listing categories</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.name, category_path(category) %></td>
    <td>
      <%= link_to 'Edit', edit_category_path(category), :class => "btn btn-mini" %>
      <%= link_to 'Destroy', category_path(category), :method => :delete, :data => { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-mini" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path, :class => "btn btn-small" %>
